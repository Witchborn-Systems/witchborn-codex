{
  "manifest_version": 3,
  "name": "AI:// Links",
  "version": "3.6.1",
  "author": "Witchborn Systems 501(c)(3)",
  "description": "Unlock the sovereign web. Instantly resolve ai:// and mcp:// links to profiles, consoles, and AI endpoints via the Witchborn Codex.",
  "homepage_url": "https://witchbornsystems.org",
  "permissions": [
    "tabs",
    "activeTab",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://witchbornsystems.ai/*",
    "http://localhost:8000/*",
    "*://*.google.com/*",
    "*://*.bing.com/*",
    "*://*.duckduckgo.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/search*",
        "*://*.bing.com/search*",
        "*://*.duckduckgo.com/*"
      ],
      "js": ["interceptor.js"],
      "run_at": "document_start"
    }
  ],
  "omnibox": { 
    "keyword": "ai" 
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}